<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="409dp"
            android:layout_height="136dp" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="118dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/fotoview"
        />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="DATOS DE ELEFANTE"
                    android:layout_width="261dp"
                    android:layout_height="45dp" android:id="@+id/tituloview"
                    android:textSize="18sp" android:typeface="normal"
                    android:textStyle="bold"/>
            <TextView
                    android:text="texto basico"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/descripcionview" android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>