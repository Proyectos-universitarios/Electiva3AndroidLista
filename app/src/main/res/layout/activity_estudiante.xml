<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Estudiante">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="87dp">
        <ImageView
                android:layout_width="308dp"
                android:layout_height="176dp" app:srcCompat="@drawable/robero001" android:id="@+id/imageView"
                tools:srcCompat="@drawable/robero001"
        />
        <TextView
                android:text="ROBERTO ESAU PERDOMO ARAGON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textStyle="bold"/>
        <TextView
                android:text="2946452013"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textStyle="bold"/>
        <Button
                android:text="REGRESAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button"
                android:onClick="regresar"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>